<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
		<record id="view_order_form_inherit" model="ir.ui.view">
			<field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"></field>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='state']" position="replace">
            		<field name="state" widget="statusbar" statusbar_visible="draft,sent,sale,planning,to_shipment,done"/>
            	</xpath>
            	<xpath expr="//button[@name='action_cancel']" position="inside">
            		<button name="action_planning" states="sale" type='object' string="Planning" class="oe_highlight"/>
            		<button name="action_to_shipment" states="planning" type='object' string="To Shipment" class="oe_highlight"/>
            	</xpath>
            </field>
		</record>
	</data>
</openerp>